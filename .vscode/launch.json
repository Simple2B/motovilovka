    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://127.0.0.1:5002/",
            "webRoot": "${workspaceFolder}/app/"
        },
        {
            "name": "Dev Debug",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi:app",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port",
                "5002"
            ],
            "jinja": true
        },
        {
            "name": "mqtt listen",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "justMyCode": false,
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "mqtt"
            ],
            "jinja": true
        }
    ]
}